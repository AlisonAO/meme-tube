<h1>Edit Video Information</h1>

<form action="/memes/<%= @meme.id %>" method="POST">

	<label for= "title">Title:</label>
	<input type="text" name="title" value="<%= @meme.title %>" placeholder= "Title">

	<label for="description"></label>
	<textarea name="description" placeholder="Description"><%= @meme.description %></textarea>

	<label for="url"></label>
	<textarea name="url" placeholder="URL"><%= @meme.url%></textarea>

	<label for="genre"></label>
	<textarea name="genre" placeholder="Genre"><%= @meme.genre %></textarea>

	<input type="hidden" name="_method" value="PUT">
	<input type="submit" value="Save">

</form>